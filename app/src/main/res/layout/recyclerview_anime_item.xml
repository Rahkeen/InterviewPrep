<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/anime_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="8dp"
      android:paddingLeft="8dp"
      android:paddingTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/anime_cover_image"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="RtlHardcoded,RtlSymmetry"
      tools:text="Cowboy Bebop"
      />

  <ImageView
      android:id="@+id/anime_cover_image"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:contentDescription="@string/anime_content_description"
      app:layout_constraintHorizontal_chainStyle="spread"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@id/anime_title"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</android.support.constraint.ConstraintLayout>